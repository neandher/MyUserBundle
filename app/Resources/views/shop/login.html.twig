{% extends 'shop/base.html.twig' %}

{% block body %}

    <h3>Login</h3>

    {{ form_start(form, { 'action': path('shop_login_check') }) }}

    <div class="row">
        <div class="col-lg-12">

            {{ include('_partials/_alerts.html.twig') }}

            <div class="row">
                {{ form_row(form._username, {'attr':{'value': last_username }}) }}
            </div>
            <div class="row">
                {{ form_row(form._password) }}
            </div>
            <div class="row">
                {{ form_row(form._remember_me) }}
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <button class="btn btn-primary">Login</button>
                    <a class="pull-right" href="#">
                        Esqueci minha senha
                    </a>
                </div>
            </div>

        </div>
    </div>

    {{ form_widget(form._token) }}

    {{ form_end(form, {'render_rest': false}) }}

{% endblock %}